{
	"version": 1,
	"servers": [
		{
			"name": "Next.js 개발 서버",
			"command": "npm run dev",
			"port": 3000,
			"autostart": false
		}
	],
	"tools": [
		{
			"name": "lint",
			"command": "npm run lint",
			"description": "ESLint를 실행하여 코드 품질을 검사합니다."
		},
		{
			"name": "build",
			"command": "npm run build",
			"description": "Next.js 애플리케이션을 빌드합니다."
		},
		{
			"name": "test",
			"command": "npm run test",
			"description": "테스트를 실행합니다."
		}
	],
	"yolo": false
}
